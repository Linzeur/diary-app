<% content_for :list_entry do %>
<div class="row">
  <div class="scrollbar style-scroll">
    <% if @url == "/" || @url == "/trash" || @url == "/edit" %>
      <% if @data.empty? %>
        <div class="col-sm-12">
          <div class="card-list">
            <h3> Sin elementos </h3>
          </div>
        </div>
      <% else %>
        <% @data.each do |daily| %>
          <div class="col-sm-12">
            <div class="card-list">
              <% if @url == "/" || @url == "/edit" %>
                <a href="/highlight?id=<%= daily["id"] %>&flag=<%= daily["highlight"] %>"> 
                  <button type="button" class="btn btn-<%= daily["highlight"] == 0 ? "default" : "warning" %> btn-sm" tilte="Highlitgh">
                      <span
                        class="glyphicon glyphicon-<%= daily["highlight"] == 0 ? "star-empty" : "star" %>"
                        aria-hidden="true"
                      ></span>
                  </button>
                </a>
              <% end %>
              <div class="entry">
                <h4><%= daily["title"] %></h4>
                <span><%= daily["datetime"] %></span>
                <div class="overflow ellipsis"><%= daily["content"] %></div>
              </div>
              <div>
                <a href="/view?id=<%= daily["id"] %>">
                  <button type="button" class="btn btn-default btn-sm" title="Ver">
                    <span
                        class="glyphicon glyphicon-eye-open"
                        aria-hidden="true"
                    ></span>
                  </button>
                </a>
                <% if @url == "/" || @url == "/edit" %>
                  <a href="/edit?id=<%= daily["id"] %>">
                    <button type="button" class="btn btn-default btn-sm" title="Editar">
                      <span
                        class="glyphicon glyphicon-pencil"
                        aria-hidden="true"
                      ></span>
                    </button>
                  </a>
                  <a href="/delete?id=<%= daily["id"] %>">
                    <button type="button" class="btn btn-default btn-sm" title="Borrar">
                      <span
                        class="glyphicon glyphicon-trash"
                        aria-hidden="true"
                      ></span>
                    </button>
                  </a>
                <% end %>
                <% if @url == "/trash" %>
                  <a href="/restore?id=<%= daily["id"] %>">
                    <button type="button" class="btn btn-default btn-sm" title="Restaurar">
                      <span
                        class="glyphicon glyphicon-refresh"
                        aria-hidden="true"
                      ></span>
                    </button>
                  </a>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
    <% if @url == "/photo" %>
      <div class="col-sm-12">
        <div class="card-list">
          <a href="/add-photo">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="URL . . .">
              <span class="input-group-btn">
                <button class="btn btn-default" type="button">Subir!</button>
              </span>
            </div>
          </a>
        </div>
      </div>
    <% end %>
  </div>
</div>
<% end %>