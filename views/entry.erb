<% content_for :entry do %>
<form action="/" method="post">
  <div class="card-block card-shadow">
    <div class="row content">
      <div class="col-sm-9" style="padding-top: 25px" ;>
        <div class="input-group" style="display: ruby">
          <input
            type="text"
            class="form-control"
            placeholder="How would you name this story?"
            name="title"
            maxlength="80"
            style="width:60%;margin-right:100px; font-family: 'Margarine', cursive;"
          />
          <label
            ><input
              type="date"
              class="form-control"
              name="date"
              style="width:150px; font-family: 'Questrial', serif;"/>
              <input
              type="time"
              class="form-control"
              name="time"
              style="width:100px; font-family: 'Questrial', sans-serif;"
          /></label>
        </div>
      </div>
    </div>
    <div class="row content"></div>
    <div class="row content">
      <div class="col-sm-12">
        <br />
        <textarea
          class="form-control"
          style="width:100%;height:300px"
          placeholder="What happened today?"
          name="content"
        ></textarea>
        <br /><br />
        <div style="text-align: right">
          <input
            type="submit"
            value="SAVE"
            style="width: 20%; font-size: large; background-color: orange;
            color: white;margin-bottom: 20px; border: outset;
            font-family: 'Questrial', sans-serif;"
          />
        </div>
      </div>
    </div>
  </div>
</form>
<% end %>
