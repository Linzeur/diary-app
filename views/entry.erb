<% content_for :entry do %>
<form action="/<%="?id=" + @entry_json["id"] if @entry_json%>" method="post">
  <div class="card-block card-shadow">
    <div class="row content">
      <div class="col-sm-9" style="padding-top: 25px;width:100%" ;>
        <div class="input-group" style="display: flex">
          <input
            type="text"
            class="form-control"
            placeholder="How would you name this story?"
            name="title"
            maxlength="80"
            style="width:50%;margin-right:20px; font-family: 'Margarine', cursive;"
            value="<%=@entry_json["title"] if @entry_json%>"
            required
          />
          <div style="width:40%;text-align:center">
          <% if @entry_json %>
            <label style="font-size:20px;margin-top:2px"><%=@entry_json["datetime"]%></label>
          <%else%>
            <input
              type="date"
              class="form-control"
              name="date"
              style="width:160px; font-family: 'Questrial', serif;"
              value="<%= Time.now.strftime("%Y-%m-%d") %>"
              required
              /><input
              type="time"
              class="form-control"
              name="time"
              style="width:160px; font-family: 'Questrial', serif;"
              value="<%= Time.now.strftime("%H:%M:%S") %>"
              required
            />
          <%end %>
          </div>
          <div style="width:10%;justify-content:right;display:flex">
            <input type="checkbox" id="toggle"/>
            <button type="button"
              class="btn btn-<%= (@entry_json == nil || @entry_json["highlight"] == 0) ? 'default' : 'warning' %> btn-sm"
              title="Highligth" style="width:50px;" name="highlight">
            <label id="label" for="toggle">
              <%# <span id="switch"></span> %>
              <span id="switch"
                class="glyphicon glyphicon-star<%="-empty" if @entry_json == nil || @entry_json["highlight"] == 0  || params[:state] == "0"%>"
                aria-hidden="true"
              ></span>
            </label>
            </button>
          </div>
        </div>
      </div>
    </div>
    <div class="row content">
      <div class="col-sm-12">
        <br />
        <textarea
          class="form-control"
          style="width:100%;height:300px; background:white"
          placeholder="What happened today?"
          name="content"
          required
        ><%= @entry_json["content"] if @entry_json%></textarea>
        <br /><br />
        <div style="text-align: right">
          <input
            type="submit"
            value="Save Story"
            style="width: 20%; font-size: large; background-color: orange;
            color: white;margin-bottom: 20px; border: outset;
            font-family: 'Questrial', sans-serif"
          />
        </div>
      </div>
    </div>
  </div>
</form>
<% end %>
