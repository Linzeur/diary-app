<% content_for :daily do %>
<form action="/" method="post">
  <div class="card-block card-shadow">
    <div class="row content">
      <div class="col-sm-9">
        <div class="input-group" style="width: 90%;">        
          <input type="text" class="form-control" placeholder= "Insert title" name="title" maxlength="80">
          <label>Select date: <input type="datetime"></label>
        </div>
      </div>
    </div>
    <div class="row content">
    </div>
    <div class="row content">
      <div class="col-sm-12">
        <br/>
        <textarea rows="18" cols="35" placeholder="Insert content" name="content"></textarea>
      </div>
      <br/>
      <div style="text-align: right">
	      <input type="submit" value="Submit"</input> 
      </div>
    </div>
  </div>
</form>
<% end %>